<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="@color/qu_daynight_black_alpha_06">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="20sp"/>
                    <solid android:color="@color/mod_daynight_black"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20sp"/>
                    <stroke android:width="1px" android:color="@color/qu_daynight_grey_400"/>
                    <solid android:color="@color/mod_daynight_white"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20sp"/>
            <stroke android:width="1px" android:color="@color/qu_daynight_grey_400"/>
            <solid android:color="@color/mod_daynight_white"/>
        </shape>
    </item>
</selector>
