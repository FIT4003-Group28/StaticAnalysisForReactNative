    <TextView android:id="@+id/usernameTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@+id/avatarImageView" style="@style/UsernameTextAppearance"/>
    <TextView android:id="@+id/disclaimerTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/POSTING_PUBLICLY" android:layout_below="@+id/usernameTextView" android:layout_toEndOf="@+id/avatarImageView" style="@style/DisclaimerTextAppearance"/>
</RelativeLayout>
