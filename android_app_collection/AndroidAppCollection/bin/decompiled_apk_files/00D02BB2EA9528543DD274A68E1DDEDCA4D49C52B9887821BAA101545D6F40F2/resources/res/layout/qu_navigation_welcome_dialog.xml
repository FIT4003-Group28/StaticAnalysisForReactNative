<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" style="@style/QuNavigationWelcomeDialog">
    <LinearLayout style="@style/QuNavigationDialogContent">
        <ImageView android:id="@+id/navigation_welcome_dialog_image" android:layout_width="match_parent" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layerType="software" style="@style/Image"/>
        <TextView android:id="@+id/navigation_welcome_title_text" android:layout_marginTop="16dp" android:text="@string/NAVIGATION_DISCLAIMER_TITLE" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/QuNavigationDialogTitleTextBox"/>
        <TextView android:id="@+id/navigation_welcome_dialog_text" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_marginTop="4dp" android:layout_marginBottom="10dp" android:text="@string/NAVIGATION_DISCLAIMER" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/QuNavigationDialogTextBox"/>
        <TextView android:id="@+id/navigation_assistant_dialog_text" android:paddingBottom="10dp" android:layout_marginTop="4dp" android:layout_marginBottom="10dp" android:text="@string/NAVIGATION_ASSISTANT_DISCLAIMER_TEXT" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/QuNavigationDialogTextBox"/>
    </LinearLayout>
</ScrollView>
