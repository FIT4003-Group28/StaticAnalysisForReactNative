<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="top|center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:src="@drawable/engagement_panel_drag_handle" android:contentDescription="@string/accessibility_drag_handle"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/header_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingTop="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:paddingStart="16dp">
            <TextView android:textAppearance="?attr/ytTextAppearanceBody2b" android:ellipsize="end" android:layout_gravity="start" android:id="@+id/webview_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:lineHeight="22sp"/>
            <LinearLayout android:orientation="horizontal" android:paddingTop="2dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView android:id="@+id/not_secured_icon" android:visibility="gone" android:layout_width="18dp" android:layout_height="18dp" android:src="0x7f08064d" android:tint="?attr/ytIcon1" android:paddingEnd="2dp"/>
                <android.support.v7.widget.AppCompatImageView android:id="@+id/secured_icon" android:visibility="gone" android:layout_width="18dp" android:layout_height="18dp" android:src="0x7f080647" android:tint="?attr/ytIcon1" android:paddingEnd="2dp"/>
                <TextView android:textAppearance="?attr/ytTextAppearanceBody1a" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/webview_url" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.AppCompatImageView android:layout_gravity="end|center_vertical" android:id="@+id/overflow_menu" android:background="?attr/selectableItemBackgroundBorderless" android:padding="12dp" android:layout_width="48dp" android:layout_height="48dp" android:src="0x7f08064b" android:tint="?attr/ytTextPrimary" android:contentDescription="@string/accessibility_overflow_menu"/>
        <android.support.v7.widget.AppCompatImageView android:layout_gravity="end|center_vertical" android:id="@+id/open_in_browser_button" android:background="?attr/selectableItemBackgroundBorderless" android:padding="12dp" android:layout_width="48dp" android:layout_height="48dp" android:src="0x7f08064a" android:tint="?attr/ytTextPrimary" android:contentDescription="@string/accessibility_open_in_external_browser"/>
        <android.support.v7.widget.AppCompatImageView android:layout_gravity="end|center_vertical" android:id="@+id/close_button" android:background="?attr/selectableItemBackgroundBorderless" android:padding="12dp" android:layout_width="48dp" android:layout_height="48dp" android:src="0x7f0806b3" android:tint="?attr/ytTextPrimary" android:contentDescription="@string/accessibility_close_button"/>
    </LinearLayout>
</LinearLayout>
