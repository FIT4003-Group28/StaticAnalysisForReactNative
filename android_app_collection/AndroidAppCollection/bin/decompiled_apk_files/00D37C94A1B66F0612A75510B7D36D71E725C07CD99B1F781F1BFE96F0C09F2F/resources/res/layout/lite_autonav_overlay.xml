<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/background" android:background="?attr/ytOverlayBackgroundSolid" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/mini_thumbnail" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:contentDescription="@null"/>
    <View android:id="@+id/pip_background" android:background="?attr/ytOverlayBackgroundMediumLight" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ProgressBar android:layout_gravity="bottom" android:id="@+id/pip_countdown" android:visibility="gone" android:layout_width="match_parent" android:layout_height="4dp" android:progressDrawable="@drawable/autonav_pip_countdown" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <View android:layout_gravity="top" android:id="@+id/top_bar_background" android:background="?attr/ytOverlayBackgroundLight" android:layout_width="match_parent" android:layout_height="@dimen/autonav_top_bar_background_height"/>
    <View android:layout_gravity="bottom" android:id="@+id/bottom_bar_background" android:background="?attr/ytOverlayBackgroundLight" android:layout_width="match_parent" android:layout_height="0dp"/>
    <FrameLayout android:id="@+id/core_container" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent"/>
</FrameLayout>
