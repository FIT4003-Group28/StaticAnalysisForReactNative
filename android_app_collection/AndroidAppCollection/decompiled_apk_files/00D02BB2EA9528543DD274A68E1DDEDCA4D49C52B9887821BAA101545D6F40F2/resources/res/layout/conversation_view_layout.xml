<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:padding="0dp" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
    <com.google.android.libraries.messaging.lighter.ui.lighterwebview.LighterWebView android:orientation="vertical" android:id="@+id/lighter_web_view_body" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/conversation_body" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/coordinator_body" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <com.google.android.material.appbar.AppBarLayout android:id="@+id/app_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_insetEdge="0x30">
                <com.google.android.libraries.messaging.lighter.ui.conversationheader.ConversationHeaderView android:id="@+id/conversation_header" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="@dimen/header_expanded_height" app:layout_scrollFlags="0x13" app:titleEnabled="false"/>
                <com.google.android.libraries.material.progress.MaterialProgressBar android:id="@+id/conversation_progress_bar" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:mtrlLinearBarHeight="4dp" app:mtrlLinearBarInset="0dp" style="@style/Widget.GoogleLib.Progress.Linear.Indeterminate"/>
                <com.google.android.libraries.messaging.lighter.ui.statusbar.TextStatusBarHolderView android:id="@+id/top_status_bar_holder" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_dodgeInsetEdges="0x30"/>
            </com.google.android.material.appbar.AppBarLayout>
            <com.google.android.libraries.messaging.lighter.ui.messagelist.MessageListView android:id="@+id/messages_list" android:paddingBottom="@dimen/message_list_padding_bottom" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:contentDescription="@string/conversation_history_label" app:layout_behavior="com.google.android.libraries.messaging.lighter.ui.conversationheader.ConversationHeaderScrollingViewBehavior" app:pagingMode="1"/>
            <com.google.android.libraries.messaging.lighter.ui.common.LoadingView android:id="@+id/conversation_loading_view" android:paddingTop="56dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_anchor="@+id/app_bar" app:layout_anchorGravity="0x51"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <com.google.android.libraries.messaging.lighter.ui.statusbar.TextStatusBarHolderView android:id="@+id/bottom_status_bar_holder" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@+id/composer_entrypoint_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent"/>
            <com.google.android.libraries.messaging.lighter.ui.composebox.ComposeBoxView android:id="@+id/compose_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.libraries.messaging.lighter.ui.overlay.OverlayView android:id="@+id/conv_overlay_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
</FrameLayout>
