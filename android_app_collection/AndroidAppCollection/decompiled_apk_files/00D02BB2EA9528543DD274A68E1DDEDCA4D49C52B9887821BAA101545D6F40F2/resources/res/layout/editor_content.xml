<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/mod_daynight_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/place_picker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/profileBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:importantForAccessibility="no" android:layout_marginStart="@dimen/horizontal_margin" android:layout_marginEnd="@dimen/horizontal_margin" android:layout_alignParentStart="true"/>
        <fragment android:id="@+id/draft_status_fragment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/horizontal_margin" android:layout_alignParentEnd="true" class="com.google.android.apps.gmm.ugc.post.editor.DraftStatusFragment"/>
    </RelativeLayout>
    <com.google.android.apps.gmm.base.views.fivestar.FiveStarView android:layout_gravity="center_horizontal" android:id="@+id/ratingFiveStarView" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/PostEditorRating"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/WRITE_REVIEW_TITLE_TEXT" android:layout_marginStart="@dimen/horizontal_margin" android:layout_marginEnd="@dimen/horizontal_margin" style="@style/TextAppearance.GoogleMaterial.Subtitle2"/>
    <EditText android:gravity="top" android:id="@+id/contentEditText" android:background="@drawable/comment_outline" android:padding="@dimen/editor_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:minHeight="@dimen/editor_min_height" android:hint="@string/WRITE_REVIEW_HINT" android:layout_marginStart="@dimen/horizontal_margin" android:layout_marginEnd="@dimen/horizontal_margin" style="@style/PostEditorReviewText"/>
    <fragment android:id="@+id/visit_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="12dp" class="com.google.android.apps.gmm.ugc.post.editor.VisitDateFragment"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/editor_component_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <fragment android:id="@+id/mediaCarouselFragment" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/horizontal_margin" android:layout_marginEnd="@dimen/horizontal_margin" class="com.google.android.apps.gmm.ugc.post.photo.MediaCarouselFragment"/>
    <com.google.android.material.chip.Chip android:id="@+id/addPhotosButton" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/PostEditorAddPhotosButton"/>
    <Space android:layout_width="match_parent" android:layout_height="64dp"/>
</LinearLayout>
