<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/actions" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/notification_large_icon_width">
    <ImageView android:background="#29000000" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="horizontal" android:id="@+id/action_stop" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" style="@style/Widget.Compat.NotificationActionContainer">
            <ImageView android:layout_gravity="start|center_vertical" android:layout_width="@dimen/notification_action_icon_size" android:layout_height="@dimen/notification_action_icon_size" android:src="0x7f08073f" android:scaleType="centerInside"/>
            <TextView android:ellipsize="end" android:layout_gravity="start|center_vertical" android:id="@+id/action_stop_text" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/TRANSIT_GUIDANCE_NOTIFICATION_ACTION_STOP" android:singleLine="true" android:paddingStart="4dp" style="@style/Widget.Compat.NotificationActionText"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/action_share_trip" android:visibility="gone" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" style="@style/Widget.Compat.NotificationActionContainer">
            <ImageView android:layout_gravity="start|center_vertical" android:layout_width="@dimen/notification_action_icon_size" android:layout_height="@dimen/notification_action_icon_size" android:src="0x7f08073f" android:scaleType="centerInside"/>
            <TextView android:ellipsize="end" android:layout_gravity="start|center_vertical" android:id="@+id/action_share_trip_text" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:paddingStart="4dp" style="@style/Widget.Compat.NotificationActionText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
