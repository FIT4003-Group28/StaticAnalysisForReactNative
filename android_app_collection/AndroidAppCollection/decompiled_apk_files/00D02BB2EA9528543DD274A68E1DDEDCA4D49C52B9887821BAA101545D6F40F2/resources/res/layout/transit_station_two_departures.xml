<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_toLeftOf="@+id/departure_first_chip" android:layout_alignParentLeft="true">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/transit_station_disruption_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp"/>
            <TextView android:ellipsize="end" android:id="@+id/transit_station_departures_text" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TransitNotificationText"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp">
            <ImageView android:id="@+id/alerts_summary_icon" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="6dp"/>
            <TextView android:layout_gravity="bottom" android:id="@+id/transit_station_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" style="@style/TransitNotificationText.Info"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/departure_first_chip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_toLeftOf="@+id/departure_second_chip">
        <ImageView android:id="@+id/transit_line_1_icon" style="@style/TransitLineNameOrIcon"/>
        <LinearLayout android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/transit_line_1_disruption_icon" android:visibility="gone" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginRight="4dp"/>
            <TextView android:id="@+id/transit_line_1_info" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TransitNotificationText.Info"/>
            <ImageView android:id="@+id/transit_line_1_crowdedness_icon" android:visibility="gone" android:layout_width="24dp" android:layout_height="match_parent" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/departure_second_chip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/transit_line_2_icon" style="@style/TransitLineNameOrIcon"/>
        <LinearLayout android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/transit_line_2_disruption_icon" android:visibility="gone" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginRight="4dp"/>
            <TextView android:id="@+id/transit_line_2_info" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TransitNotificationText.Info"/>
            <ImageView android:id="@+id/transit_line_2_crowdedness_icon" android:visibility="gone" android:layout_width="24dp" android:layout_height="match_parent" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
