<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/live_chat_action_pill_radius"/>
            <solid android:color="@android:color/black"/>
        </shape>
    </item>
    <item>
        <selector>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/live_chat_action_pill_radius"/>
                    <solid android:color="?attr/ytBrandBackgroundPrimary"/>
                    <stroke android:width="@dimen/live_chat_action_pill_stroke" android:color="?attr/yt10PercentLayer"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
