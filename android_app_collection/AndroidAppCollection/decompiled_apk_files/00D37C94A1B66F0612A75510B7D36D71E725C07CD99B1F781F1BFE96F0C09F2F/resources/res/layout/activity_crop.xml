<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:id="@+id/image" android:background="@color/yt_black_pure" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="matrix" android:contentDescription="@string/crop_image_description"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/area_above_crop" android:background="@color/crop_mask_background" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/area_for_crop" android:layout_width="match_parent" android:layout_height="0dp">
            <View android:background="@color/crop_mask_background" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/tv_crop" android:background="@drawable/crop_border" android:layout_width="0dp" android:layout_height="match_parent">
                <FrameLayout android:id="@+id/top_desktop_crop" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0">
                    <View android:id="@+id/top_desktop_mask" android:background="@color/crop_mask_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    <TextView android:textAppearance="?attr/ytTextAppearanceBody1a" android:textColor="@color/crop_info_text" android:gravity="top|left" android:layout_gravity="top|left" android:id="@+id/tv_crop_text" android:background="@drawable/crop_chip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="4dp"/>
                </FrameLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/desktop_crop" android:background="@drawable/crop_border" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0">
                    <FrameLayout android:id="@+id/left_mobile_crop" android:visibility="gone" android:layout_width="-1dp" android:layout_height="match_parent">
                        <View android:id="@+id/left_mobile_mask" android:background="@color/crop_double_mask_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
                        <TextView android:textAppearance="?attr/ytTextAppearanceBody1a" android:textColor="@color/crop_info_text" android:gravity="top|left" android:layout_gravity="top|left" android:id="@+id/desktop_crop_text" android:background="@drawable/crop_chip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="4dp"/>
                    </FrameLayout>
                    <FrameLayout android:id="@+id/mobile_crop" android:background="@drawable/crop_border" android:visibility="gone" android:layout_width="-1dp" android:layout_height="match_parent">
                        <TextView android:textAppearance="?attr/ytTextAppearanceBody1a" android:textColor="@color/crop_info_text" android:gravity="top|left" android:layout_gravity="top|left" android:id="@+id/mobile_crop_text" android:background="@drawable/crop_chip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="4dp"/>
                    </FrameLayout>
                    <View android:id="@+id/right_mobile_crop" android:background="@color/crop_double_mask_background" android:visibility="gone" android:layout_width="-1dp" android:layout_height="match_parent"/>
                </LinearLayout>
                <View android:id="@+id/bottom_desktop_crop" android:background="@color/crop_mask_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0"/>
            </LinearLayout>
            <View android:background="@color/crop_mask_background" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <View android:id="@+id/area_below_crop" android:background="@color/crop_mask_background" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout android:layout_gravity="bottom|center_horizontal" android:orientation="horizontal" android:id="@+id/crop_info_layout" android:background="@drawable/crop_info" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:layout_marginBottom="0dp">
        <TextView android:textAppearance="?attr/ytTextAppearanceBody1a" android:textColor="@color/yt_white1" android:gravity="center" android:id="@+id/crop_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginRight="0dp"/>
    </FrameLayout>
</merge>
