<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/qu_daynight_white"/>
            <corners android:radius="@dimen/mod_action_button_corner_radius"/>
            <stroke android:width="1dp" android:color="@color/mod_daynight_blue600"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <ripple android:color="@color/mod_daynight_blue_alpha12">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/qu_daynight_white"/>
                    <corners android:radius="@dimen/mod_action_button_corner_radius"/>
                    <stroke android:width="2dp" android:color="@color/mod_daynight_blue600"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/qu_daynight_white"/>
            <corners android:radius="@dimen/mod_action_button_corner_radius"/>
            <stroke android:width="1dp" android:color="@color/qu_daynight_grey_300"/>
        </shape>
    </item>
</selector>
