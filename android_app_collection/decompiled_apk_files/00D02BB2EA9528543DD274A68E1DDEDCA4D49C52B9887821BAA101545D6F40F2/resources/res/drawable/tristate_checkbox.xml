<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_checked="true" android:id="@+id/checkbox_checked_state" android:drawable="@drawable/tristate_checkbox_checked"/>
    <item android:id="@+id/checkbox_indeterminate_state" android:drawable="@drawable/tristate_checkbox_indeterminate" app:state_indeterminate="true"/>
    <item android:state_checked="false" android:id="@+id/checkbox_unchecked_state" android:drawable="@drawable/tristate_checkbox_unchecked"/>
    <transition android:drawable="@drawable/tristate_checkbox_unchecked_to_checked" android:toId="@+id/checkbox_checked_state" android:fromId="@+id/checkbox_unchecked_state"/>
    <transition android:drawable="@drawable/tristate_checkbox_unchecked_to_indeterminate" android:toId="@+id/checkbox_indeterminate_state" android:fromId="@+id/checkbox_unchecked_state"/>
    <transition android:drawable="@drawable/tristate_checkbox_checked_to_unchecked" android:toId="@+id/checkbox_unchecked_state" android:fromId="@+id/checkbox_checked_state"/>
    <transition android:drawable="@drawable/tristate_checkbox_checked_to_indeterminate" android:toId="@+id/checkbox_indeterminate_state" android:fromId="@+id/checkbox_checked_state"/>
    <transition android:drawable="@drawable/tristate_checkbox_indeterminate_to_unchecked" android:toId="@+id/checkbox_unchecked_state" android:fromId="@+id/checkbox_indeterminate_state"/>
    <transition android:drawable="@drawable/tristate_checkbox_indeterminate_to_checked" android:toId="@+id/checkbox_checked_state" android:fromId="@+id/checkbox_indeterminate_state"/>
</animated-selector>
