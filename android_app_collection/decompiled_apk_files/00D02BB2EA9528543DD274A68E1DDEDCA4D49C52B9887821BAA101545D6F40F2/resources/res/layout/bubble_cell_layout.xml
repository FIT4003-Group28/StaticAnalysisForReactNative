            <com.google.android.libraries.messaging.lighter.ui.messagecell.MessageCellStatusView android:id="@+id/bubble_cell_status_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/message_content_wrapper"/>
        </RelativeLayout>
    </LinearLayout>
</merge>
