<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:lighter="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:id="@+id/bubble_cell_wrapper" android:paddingLeft="@dimen/bubble_cell_start_end_padding" android:paddingRight="@dimen/bubble_cell_start_end_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.google.android.libraries.messaging.lighter.ui.messagecell.TimestampHeaderView android:layout_gravity="center" android:id="@+id/bubble_cell_tombstone_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.libraries.messaging.lighter.ui.messagecell.TopLabelView android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/top_label_layout" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/message_content_wrapper" android:paddingStart="12dp" android:paddingEnd="12dp" android:layout_alignStart="@+id/message_content_wrapper"/>
