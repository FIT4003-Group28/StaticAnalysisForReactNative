<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:theme="@style/Theme.GoogleMaterial.DayNight" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/place_card_background" android:paddingTop="16dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:elevation="3dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
            <TextView android:textColor="@color/mod_daynight_grey900" android:id="@+id/title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5" style="@style/TextAppearance.GoogleMaterial.Headline6"/>
            <TextView android:textColor="@color/mod_daynight_grey900" android:gravity="end" android:id="@+id/distance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp" style="@style/TextAppearance.GoogleMaterial.Headline6"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="start|center_vertical" android:orientation="horizontal" android:id="@+id/person_details" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
            <TextView android:textColor="@color/mod_daynight_grey650" android:id="@+id/person_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextAppearance.GoogleMaterial.Body2"/>
            <TextView android:textColor="@color/mod_daynight_grey650" android:id="@+id/person_separator_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="·" android:importantForAccessibility="no" android:paddingStart="6dp" android:paddingEnd="6dp" style="@style/TextAppearance.GoogleMaterial.Body2"/>
            <LinearLayout android:layout_gravity="start|center_vertical" android:orientation="horizontal" android:id="@+id/person_battery_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:importantForAccessibility="yes">
                <ImageView android:layout_gravity="center" android:id="@+id/person_battery_icon" android:layout_width="10dp" android:layout_height="18dp" android:scaleType="center" android:importantForAccessibility="no"/>
                <TextView android:textColor="@color/mod_daynight_grey650" android:id="@+id/person_battery_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:importantForAccessibility="no" android:paddingStart="6dp" style="@style/TextAppearance.GoogleMaterial.Body2"/>
            </LinearLayout>
            <TextView android:textColor="@color/mod_daynight_grey650" android:id="@+id/person_separator_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="·" android:importantForAccessibility="no" android:paddingStart="6dp" android:paddingEnd="6dp" style="@style/TextAppearance.GoogleMaterial.Body2"/>
            <TextView android:textColor="@color/mod_daynight_grey650" android:id="@+id/person_status" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextAppearance.GoogleMaterial.Body2"/>
        </LinearLayout>
        <TextView android:textColor="@color/mod_daynight_grey650" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" style="@style/TextAppearance.GoogleMaterial.Body2"/>
        <com.google.android.material.button.MaterialButton android:id="@+id/primary_button" android:paddingLeft="@dimen/google_btn_icon_btn_padding_left" android:paddingRight="@dimen/google_btn_icon_btn_padding_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/START_NAVIGATION_BUTTON" app:cornerRadius="18dp" app:icon="0x7f080669" app:iconSize="20dp" style="@style/Widget.GoogleMaterial.Button"/>
    </LinearLayout>
</FrameLayout>
