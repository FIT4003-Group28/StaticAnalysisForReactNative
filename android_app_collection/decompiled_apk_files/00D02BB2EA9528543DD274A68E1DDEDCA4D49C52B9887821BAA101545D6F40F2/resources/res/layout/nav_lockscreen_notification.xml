<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/lockscreen_notification_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="64dp">
    <ImageView android:id="@+id/lockscreen_notification_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:layout_marginRight="12dp" android:scaleType="center"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@android:dimen/notification_large_icon_width" android:layout_marginEnd="@android:dimen/notification_large_icon_width" style="@style/NavNotificationContentContainer">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="64dp" style="@style/NavNotificationContentLine">
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="bottom" android:id="@+id/lockscreen_directions" android:paddingTop="8dp" android:layout_width="wrap_content" android:layout_height="0dp" android:singleLine="true" android:layout_weight="1"/>
            <TextView android:textSize="14dp" android:textColor="#ffffff" android:gravity="top" android:id="@+id/lockscreen_eta" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="0dp" android:singleLine="true" android:layout_weight="1"/>
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/lockscreen_oneliner" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="0dp" android:singleLine="true" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
