<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:importantForAccessibility="no">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/photo_posts_media_corner_radius" app:cardElevation="0dp">
        <com.google.android.apps.gmm.ugc.post.photo.ResizingImageView android:id="@+id/image" android:layout_width="match_parent" android:layout_height="wrap_content" android:adjustViewBounds="true"/>
        <com.google.android.material.chip.Chip android:id="@+id/buttonDeselect" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/PostMediaCarouselDeselectChip"/>
        <TextView android:id="@+id/mediaIndexLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:importantForAccessibility="no" style="@style/PostMediaCarouselMediaIndexLabel"/>
    </androidx.cardview.widget.CardView>
    <EditText android:id="@+id/media_caption" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/MediaCaptionStyle"/>
</LinearLayout>
