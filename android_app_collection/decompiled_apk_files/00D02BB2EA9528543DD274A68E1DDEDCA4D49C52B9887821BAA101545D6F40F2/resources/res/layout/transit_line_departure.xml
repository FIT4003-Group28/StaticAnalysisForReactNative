<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/transit_line_icon" android:visibility="gone" style="@style/TransitLineNameOrIcon"/>
    <ImageView android:id="@+id/transit_line_disruption_icon" android:visibility="gone" android:layout_width="19dp" android:layout_height="19dp" android:layout_marginLeft="1dp" android:layout_marginStart="1dp"/>
    <LinearLayout android:id="@+id/filler_space_between_icons" android:visibility="gone" android:layout_width="6dp" android:layout_height="match_parent"/>
    <TextView android:ellipsize="end" android:gravity="start" android:id="@+id/transit_line_display_headsign" android:layout_marginRight="16dp" android:layout_weight="1" android:layout_marginEnd="16dp" style="@style/TransitNotificationText"/>
    <TextView android:gravity="end" android:id="@+id/transit_line_departure" style="@style/TransitNotificationText"/>
</LinearLayout>
