        <TextView android:textColor="@color/mod_daynight_grey650" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginHorizontal="16dp" style="@style/TextAppearance.GoogleMaterial.Body2"/>
