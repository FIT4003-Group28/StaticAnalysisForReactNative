        <RelativeLayout android:id="@+id/venue_transition_view_group" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
            <ImageView android:id="@+id/venue_transition_icon" android:layout_width="16dp" android:layout_height="0dp" android:layout_alignTop="@+id/venue_transition_text" android:layout_alignBottom="@+id/venue_transition_text" android:layout_marginStart="16dp" android:layout_marginEnd="8dp" android:layout_alignParentStart="true"/>
